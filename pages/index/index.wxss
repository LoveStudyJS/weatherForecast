.container{
  color: white;
}
.topTitle{
  padding-top: 50rpx;
  text-align: center;
}
.topTitle > text:nth-child(1){
  font-size: 50rpx;
  display: block;
  padding-top: 20rpx;
}
.topTitle > text:nth-child(2){
  font-size: 30rpx;
  margin-top: -120rpx;
  float:right;
}
.middleTile{
  font-size: 130rpx;
  text-align: center;
  padding-top: 70rpx;
}
.bottomTitle{
  display: flex;
  justify-content: space-around;
  font-size: 30rpx;
  margin-top: 30rpx;
}
.bottomTitle text{
  padding: 10rpx;
  border-radius: 10px;
  background-color: #53B6EB;
}
.middle{
  display: flex;
  background-color: #409FDA;
  color:  #ABEBFB;
  margin-top: 30rpx;
}
.futureDay{
  flex: 1;
  display: flex;
  flex-direction: column;
  flex-wrap: nowrap;
  font-size: 30rpx;
  align-items: center;
  margin: 20rpx;
}
.bottom{
  font-size: 30rpx;
  margin-top: 20rpx;
  color:  #CDFFFF;
}
.recomend{
  display: flex;
  flex-direction: column;
  margin-bottom: 10rpx;
  background-color: #409FDA;
}
.recomend > text:nth-child(1){
  font-size: 39rpx;
  padding: 10rpx 0rpx 15rpx 50rpx
}
.recomend > text:nth-child(2){
  text-indent: 20rpx;
  padding-left: 10rpx
}